@model Traversal.Areas.Member.Models.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Profil Düzenleme sayfası</h1>
<form method="post" enctype="multipart/form-data">
    @Html.Label("Adınız : ")
    <input type="text" asp-for="name" class="form-control" />
    <br />
    @Html.Label("Soyadınız : ")
    <input type="text" asp-for="surname" class="form-control" />
    <br />
    @Html.Label("Mail adresiniz : ")
    <input type="text" asp-for="email" class="form-control" />
    <br />
    @Html.Label("Şifreniz : ")
    <input type="text" asp-for="password" class="form-control" />
    <br />
    @Html.Label("Şifre tekrar : ")
    <input type="text" asp-for="confirmpassword" class="form-control" />
    <br />
    @Html.Label("Telefon numarası : ")
    <input type="text" asp-for="phoneNumber" class="form-control" />
    <br />
    <div class="form-group">
        <label>Resim Seçin</label>
        <input type="file" asp-for="Image" />
    </div>
    <br />
    <button class="btn btn-primary">Bilgileri Güncelle</button>
</form>
