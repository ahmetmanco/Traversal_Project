@model Traversal.Models.MailRequest

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Mail Gönderme Sayfası</h1>

<form method="post">

    <div class="form-group">
        @Html.Label("Alıcının Mail Adresi")
        <input type="text" asp-for="ReceiverMail" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label(" Konu Başlığı")
        <input type="text" asp-for="Subject" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label(" İçerik")
        <textarea asp-for="Body" class="form-control" rows="7" /></textarea>
    </div>
    <br />
    <button class="btn btn-primary">Mail Gönder</button>
</form>