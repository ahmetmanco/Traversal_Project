@model List<AnnouncementListDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Duyuru Listesi</h1>
<table class="table table-bordered ">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>İçerik</th>
        <th>Tarih</th>
        <th>Detaylar</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Title</td>
            <td>@item.Content</td>
            <td>@item.Date</td>
            <td><a href="#" class="btn btn-dark">Detaylar</a></td>
            <td><a href="/Admin/Announcement/DeleteAnnouncement/@item.Id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/Announcement/UpdateAnnouncement/" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Admin/Announcement/AddAnnouncement/" class="btn btn-info">Yeni Duyuru Girişi</a>