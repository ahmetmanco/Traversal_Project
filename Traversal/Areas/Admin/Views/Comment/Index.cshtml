@using EntityLayer.Concrete
@model List<Comment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yorum Listesi</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kullanıcı</th>
        <th>Rota</th>
        <th>Tarih</th>
        <th>Aksiyon</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.CommentUser</td>
            <td>@item.Destination.City</td> @* null referans hatası alıyorum *@
            <td>@(((DateTime)item.CommentDate).ToString("dd-MMMM-yyyy"))</td>
            <td><a href="/Admin/Comment/DeleteComment/@item.Id" class="btn btn-danger">Sil</a></td>
        </tr>
    }
</table>