@using EntityLayer.Concrete
@model List<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sayac = 0;
}
<style>
    img{
        border-radius:25px;
    }
</style>
<h1>Rehber Listesi</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Görsel</th>
        <th>Ad Soyad</th>
        <th>Açıklama</th>
        <th>Durum</th>
        <th>Düzenle</th>
        <th>Sil</th>
    </tr>
    @foreach(var item in Model)
    {
        sayac = sayac + 1;
        <tr>
            <td>@sayac</td>
            <td><img src="@item.Image" height="50" width="50"/></td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            
            @if (item.Status == true)
            {
                <td><a href="/Admin/Guide/ChangeToFalse/@item.Id" class="btn btn-success">Pasif Yap</a></td>
            }
            else
            {
                <td><a href="/Admin/Guide/ChangeToTrue/@item.Id" class="btn btn-success">Aktif Yap</a></td>
            }

            <td><a href="/Admin/Guide/EditGuide/" class="btn btn-success">Düzenle</a></td>
            <td><a href="/Admin/Guide/Index/" class="btn btn-warning">Sil</a></td>
        </tr>
    }
</table>
<td><a href="/Admin/Guide/AddGuide/" class="btn btn-outline-primary">Yeni rehber girişi</a></td>